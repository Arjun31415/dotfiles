#!/bin/bash

# You can call this script like this:
# $./volume.sh up
# $./volume.sh down
# $./volume.sh mute

function get_volume {
    wpctl get-volume @DEFAULT_AUDIO_SINK@ | cut -d ' ' -f 2
}

function is_mute {
    wpctl get-volume @DEFAULT_AUDIO_SINK@ | cut -d ' ' -f 3
}

function send_notification {
    DIR=$(dirname "$0")
    volume=$(get_volume)
    echo "$volume"
    volume=$(echo print "$volume * 100" | perl)
    echo "$volume"
    # Make the bar with the special character ─ (it's not dash -)
    # https://en.wikipedia.org/wiki/Box-drawing_character
    #bar=$(seq -s "─" $(($volume/5)) | sed 's/[0-9]//g')
    if [ "$volume" = "0" ]; then
        icon_name="/usr/share/icons/Tokyonight-Dark/status/48/audio-volume-muted.svg"
        "$DIR"/notify-send.sh "$volume""      " -i "$icon_name" -t 2000 -h int:value:"$volume" -h string:synchronous:"─" --replace=555
    else
        if [ "$volume" -lt "10" ]; then
            icon_name="/usr/share/icons/Tokyonight-Dark/status/48/audio-volume-low.svg"
            "$DIR"/notify-send.sh "$volume""     " -i "$icon_name" --replace=555 -t 2000
        else
            if [ "$volume" -lt "30" ]; then
                icon_name="/usr/share/icons/Tokyonight-Dark/status/48/audio-volume-low.svg"
            else
                if [ "$volume" -lt "70" ]; then
                    icon_name="/usr/share/icons/Tokyonight-Dark/status/48/notification-audio-volume-medium.svg"
                else
                    icon_name="/usr/share/icons/Tokyonight-Dark/status/48/notification-audio-volume-high.svg"
                fi
            fi
        fi
    fi
    bar=$(seq -s "─" $((volume / 5)) | sed 's/[0-9]//g')
    # Send the notification
    "/usr/bin/notify-send.sh" "$volume"" " -i "$icon_name" -t 2000 -h int:value:"$volume" -h string:synchronous:"$bar" --replace=555

}

case $1 in
up)
    # Set the volume on (if it was muted)
    wpctl set-mute @DEFAULT_AUDIO_SINK@ 0

    # Increase the volume
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+

    send_notification
    ;;
down)
    # Set the volume on (if it was muted)
    wpctl set-mute @DEFAULT_AUDIO_SINK@ 0

    # Decrease the volume
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
    send_notification
    ;;
mute)
    # Toggle mute
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
    if [[ -n $(is_mute) ]]; then
        /usr/bin/notify-send.sh -i "/usr/share/icons/Tokyonight-Dark/status/48/audio-volume-muted.svg" --replace=555 -u normal "Mute" -t 2000
    else
        send_notification
    fi
    ;;
esac
